<resources>

    <style name="V2EX.AppTheme" parent="V2EX.AppTheme.Base"/>

    <style name="V2EX.AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="drawerArrowStyle">@style/V2EX.DrawerArrowStyle</item>
    </style>

    <style name="V2EX.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="V2EX.ActivityTheme" parent="V2EX.AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="windowActionBar">true</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_default_primary</item>
        <item name="colorPrimaryDark">@color/theme_default_primary_dark</item>
        <!--item name="android:textColorPrimary">@color/theme_default_primary_text</item>
        <item name="colorAccent">@color/theme_accent</item-->

        <item name="android:windowBackground">@color/theme_window_background</item>
    </style>

    <style name="AppTheme" parent="Theme.Base">
    </style>

    <style name="Theme.Main" parent="Theme.Base">
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="dialog_common" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="dialog_share" parent="@style/dialog_common">
        <item name="android:windowBackground">@drawable/dialog_bottom_background</item>
    </style>
</resources>
